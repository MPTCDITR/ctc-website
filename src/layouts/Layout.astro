---
import { Header } from "@/components/layout/Header";
import { SiteFooter } from "@/components/layout/Footer";
import BaseHead from "../components/BaseHead.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import Navbar from "@/components/layout/Navbar";
// import Header from "../components/Header.astro";
import CTCLogo from "@/assets/logo/ctc-logo.webp";

interface Props {
  title: string;
}

const { title } = Astro.props;
import { getLangFromUrl, useTranslations } from "@/lib/i18n";
import { ui } from "@/i18n/ui";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const translations = ui[lang];
---

<!doctype html>
<html lang={Astro.currentLocale || "en"}>
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Discover our Tech Center Community and insights on our website"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/webp" href={CTCLogo.src} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <div class="min-h-screen flex flex-col">
      <!-- <Navbar client:load /> -->
      <Header translations={translations} lang={lang} client:load />
      <main class="flex-1">
        <slot />
      </main>
      <SiteFooter client:load />
    </div>
  </body>
</html>
<style is:global>
  :root {
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }
  html {
    scroll-behavior: smooth;
  }
</style>

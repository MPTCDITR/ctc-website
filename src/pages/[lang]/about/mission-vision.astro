---
import Layout from "@/layouts/Layout.astro";
import MissionVisionContent from "@/components/about/MissionVisionContent.astro";
import { languages, ui } from "@/i18n/ui";
import { getLangFromUrl } from "@/lib/i18n";
import { MISSION_VISION_PAGE_TITLE } from "@/consts";

export async function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({
    params: { lang },
  }));
}

const lang = getLangFromUrl(Astro.url);
const translations = ui[lang];
---

<Layout
  pageTitle={MISSION_VISION_PAGE_TITLE.title}
  description={MISSION_VISION_PAGE_TITLE.description}
  type="website"
>
  <MissionVisionContent translations={translations} />
</Layout>

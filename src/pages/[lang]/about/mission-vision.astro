---
import Layout from "@/layouts/Layout.astro";
import { languages, ui } from "@/i18n/ui";
import { MissionVisionContent } from "@/components/about/mission-vision-content";
import { getLangFromUrl } from "@/lib/i18n";

export async function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({
    params: { lang },
  }));
}

const lang = getLangFromUrl(Astro.url);
const translations = ui[lang];
---

<Layout title="Mission and Vision - Community Tech Centers">
  <MissionVisionContent translations={translations} client:load />
</Layout>

---
import { Button } from "@/components/ui/button";

import type { SupportedLanguage } from "@/i18n/ui";

const lang = Astro.params.lang as SupportedLanguage;

const homepageUrl = `/${lang}`;
---

<div
  class="flex flex-col items-center justify-center bg-gradient-to-b from-gray-100 to-white text-center h-screen"
>
  <div class="flex flex-col gap-4 rounded-lg p-12">
    <h1 class="text-5xl font-bold uppercase text-destructive">Muy Muy !</h1>
    <p class="mt-5 text-2xl font-light text-gray-800 md:text-3xl">
      {"We are currently working hard on this page"}
    </p>
    <p class="mt-2 text-gray-600">
      {
        "This page is under development. We will be back soon, Thank you for your patience."
      }
    </p>
  </div>
  <Button>
    <a href={homepageUrl}>Go back to homepage</a>
  </Button>
</div>

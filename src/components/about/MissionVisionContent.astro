---
import { Card } from "@/components/ui/card";
import { cn } from "@/lib/utils";
import { styles } from "@/components/text-element/ElementStyle";
import Mission from "@/assets/vision-mission/mission.svg";
import Vision from "@/assets/vision-mission/vision.svg";
import { Image } from "astro:assets";

interface Props {
  translations: Record<string, string>;
}

const { translations } = Astro.props;
const t = (key: string) => translations[key] || key;
---

<div class="container py-12 space-y-24">
  <section class="grid md:grid-cols-2 gap-12 items-center">
    <div class="space-y-6">
      <h1 class={cn(styles.heading, "text-primary")}>
        {t("about.vision.title")}
      </h1>
      <p class={cn(styles.body, "leading-relaxed")}>
        {t("about.vision.description")}
      </p>
    </div>
    <div class="flex justify-center">
      <Card
        className="aspect-square bg-background border-none max-w-60 lg:max-w-80"
      >
        <Image
          src={Vision}
          alt="c.t.c. vision"
          class="w-full object-cover"
          quality={80}
          format="webp"
        />
      </Card>
    </div>
  </section>

  <section class="grid md:grid-cols-2 gap-12 items-center">
    <div class="order-2 md:order-1 flex justify-center">
      <Card
        className="aspect-square bg-background border-none max-w-60 lg:max-w-80"
      >
        <Image
          src={Mission}
          alt="c.t.c. mission"
          class="w-full object-cover"
          quality={80}
          format="webp"
        />
      </Card>
    </div>
    <div class="space-y-6 order-1 md:order-2">
      <h1 class={cn(styles.heading, "text-primary")}>
        {t("about.mission.title")}
      </h1>
      <ul class={cn(styles.body, "leading-relaxed list-disc pl-4")}>
        <li>{t("about.mission.description1")}</li>
        <li>{t("about.mission.description2")}</li>
      </ul>
    </div>
  </section>
</div>

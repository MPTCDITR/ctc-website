---
import { Calendar, Clock, Play } from "lucide-react";
import { formatDistanceToNow } from "@/lib/utils";
import type { Video } from "@/lib/types";
import {
  Card,
  CardContent,
  CardFooter,
  CardHeader,
} from "@/components/ui/card";
import { Image } from "astro:assets";

interface Props {
  video: Video;
}

const { video } = Astro.props;
const { lang } = Astro.params;
---

<Card
  className="overflow-hidden flex flex-col h-full hover:shadow-lg transition-shadow group"
>
  <div class="relative aspect-video">
    <a
      href={`/${lang}/videos/${video.id}`}
      class="flex items-center justify-center w-full h-full"
    >
      <div class="w-full h-full overflow-hidden">
        <Image
          src={video.thumbnail}
          alt={video.title}
          width={480}
          height={360}
          class="object-cover w-full h-full transition-transform duration-500 group-hover:scale-105"
          loading="lazy"
          quality={80}
          format="webp"
          sizes="(max-width: 768px) 100vw, (max-width: 1200px) 50vw, 33vw"
        />
      </div>
      <div
        class="absolute inset-0 bg-black/20 group-hover:bg-black/0 transition-colors duration-300"
      >
      </div>
      <Play
        className="absolute text-white opacity-80 group-hover:opacity-100 group-hover:scale-110 transition-all duration-300 drop-shadow-md"
        fill="white"
        size={48}
      />
      {
        video.duration && (
          <div class="absolute bottom-2 right-2 bg-black/80 text-white text-xs font-medium px-1.5 py-0.5 rounded">
            {video.duration}
          </div>
        )
      }
    </a>
  </div>
  <CardHeader className="pb-2">
    <a href={`/${lang}/videos/${video.id}`} class="hover:underline">
      <h3
        class="text-xl font-semibold line-clamp-2 leading-tight group-hover:text-primary transition-colors"
      >
        {video.title}
      </h3>
    </a>
  </CardHeader>
  <CardContent className="flex-grow">
    <p class="text-muted-foreground line-clamp-3">
      {video.description}
    </p>
  </CardContent>
  <CardFooter className="text-sm text-muted-foreground pt-2 border-t">
    <div class="flex justify-between w-full">
      <div class="flex items-center">
        <Calendar className="h-4 w-4 mr-1" />
        <span>{formatDistanceToNow(new Date(video.publishedAt))}</span>
      </div>
      {
        video.duration && (
          <div class="flex items-center">
            <Clock className="h-4 w-4 mr-1" />
            <span>{video.duration}</span>
          </div>
        )
      }
    </div>
  </CardFooter>
</Card>
